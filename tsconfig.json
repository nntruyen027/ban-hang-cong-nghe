{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "module": "esnext",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}
